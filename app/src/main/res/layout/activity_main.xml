<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/start"
        android:layout_width="167dp"
        android:layout_height="163dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="416dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/allerta"
        android:text="@string/button_start"
        android:textColor="@color/purple_200"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/clear"
        android:layout_width="173dp"
        android:layout_height="162dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="416dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/allerta"
        android:text="@string/button_clear"
        android:textColor="@color/purple_200"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/seconds"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="257dp"
        android:layout_marginTop="230dp"
        android:autofillHints=""
        android:background="@null"
        android:ems="10"
        android:hint="@string/zero_time"
        android:inputType="textPersonName"
        android:textColor="@color/teal_200"
        android:textColorHint="@color/teal_200"
        android:textSize="70sp"
        android:maxLength="2"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor,MissingConstraints,DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/hours"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:layout_marginTop="230dp"
        android:autofillHints=""
        android:background="@null"
        android:ems="10"
        android:hint="@string/zero_time"
        android:inputType="textPersonName"
        android:textColor="@color/teal_200"
        android:textColorHint="@color/teal_200"
        android:textSize="70sp"
        android:maxLength="2"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor,MissingConstraints" />

    <EditText
        android:id="@+id/minutes"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="230dp"
        android:autofillHints=""
        android:background="@null"
        android:ems="10"
        android:hint="@string/zero_time"
        android:inputType="textPersonName"
        android:textColor="@color/teal_200"
        android:textColorHint="@color/teal_200"
        android:textSize="70sp"
        android:maxLength="2"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor,MissingConstraints" />

    <TextView
        android:id="@+id/separatorHoursMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginTop="230dp"
        android:text="@string/text_separator"
        android:textColor="@color/teal_200"
        android:textSize="70sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/separatorMinutesSeconds"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:layout_marginTop="230dp"
        android:text="@string/text_separator"
        android:textColor="@color/teal_200"
        android:textSize="70sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/allerta"
        android:text="@string/name_page"
        android:textColor="@color/teal_200"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>